@using PROG7312.Services
@model EAService.Event
@{
    ViewData["Title"] = @Model.Name;
}

<!--The card below is populated with event details that are attached to the id of the previous event that was clicked on, this of course has more information as the event card in localeventsandanncouncementes was a scaled down version-->
<div class="cardbox">
    <div class="card">

        <h3>@Model.Name</h3>

        <hr>

        <p>Admission Fee: R @Model.AdmissionFee</p>
        <p>Category: @Model.Category</p>

        <hr>

        <p>@Model.Description</p>

        <hr>

        <p>Location: @Model.Location</p>
        <p>Date: @Model.Date.ToString("dd MMM yyyy")</p>
        <p>Time: @Model.Date.ToString("HH:mm")</p>
        <p>Posted By: @Model.Author</p>

        <hr>

    </div>

    <div class="cardlink w-10" onclick="window.location.href='/LocalEvents/LocalEventsAndAnnouncements'">
        Back
    </div>
</div>
